<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:batch="http://www.springframework.org/schema/batch"
	xmlns:task="http://www.springframework.org/schema/task"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch.xsd
		http://www.springframework.org/schema/task http://www.springframework.org/schema/task/spring-task-4.0.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

	<task:scheduler id="scheduler" pool-size="10" />
	<task:executor id="executor" pool-size="10" />
	<!-- <task:scheduled-tasks> -->
	<!-- <task:scheduled ref="springBatchScheduler" method="run" cron="*/10 
		* * * * *"/> -->
	<!-- </task:scheduled-tasks> -->
	<task:annotation-driven executor="executor"
		scheduler="scheduler" />


	<!-- chunck -->
	<batch:job id="yogultMotnhlyCycleJob" restartable="false">
		<batch:step id="step1" allow-start-if-complete="false">
			<batch:tasklet>
				<batch:chunk reader="yogultItemReader"
					processor="yogultItemProcessor" writer="yogultItemWriter"
					commit-interval="2">
				</batch:chunk>
			</batch:tasklet>
		</batch:step>
	</batch:job>

	<bean id="yogultItemReader"
		class="org.mybatis.spring.batch.MyBatisCursorItemReader">
		<property name="sqlSessionFactory" ref="sqlSessionFactory" />
		<property name="queryId" value="batch.getCycleList" />
	</bean>

	<bean id="yogultItemProcessor"
		class="org.iptime.iothome.batch.YogultItemProcessor" />

	<bean id="yogultItemWriter"
		class="org.mybatis.spring.batch.MyBatisBatchItemWriter">
		<property name="sqlSessionFactory" ref="sqlSessionFactory" />
<!-- 		<property name="sqlSessionTemplate" ref="sqlSessionTemplate" /> -->
		<property name="statementId" value="batch.insertAllDaily" />
	</bean>

	<!-- <bean id="yogultItemWriter" class="org.iptime.iothome.batch.YogultItemWriter"> 
		<property name="batchRepository" ref="batchRepository"/> </bean> -->

	<!-- <bean id="springBatchScheduler" class="org.iptime.iothome.batch.SpringBatchScheduler"/> -->

	<context:annotation-config />

</beans>

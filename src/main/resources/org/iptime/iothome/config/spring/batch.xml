<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:batch="http://www.springframework.org/schema/batch"
	xmlns:task="http://www.springframework.org/schema/task"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch.xsd
		http://www.springframework.org/schema/task http://www.springframework.org/schema/task/spring-task-4.0.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

	<task:scheduler id="scheduler" pool-size="10"/>
	<task:executor id="executor" pool-size="10"/>
<!-- 	<task:scheduled-tasks> -->
<!-- 		<task:scheduled ref="springBatchScheduler" method="run" cron="*/10 * * * * *"/> -->
<!-- 	</task:scheduled-tasks> -->
	<task:annotation-driven executor="executor" scheduler="scheduler"/>
		
	
	
	<!-- chunck -->
	<batch:job id="helloWorldJob" restartable="true">
		<batch:step id="step1" allow-start-if-complete="true">
			<batch:tasklet>
				<batch:chunk reader="helloItemReader" processor="helloItemProcessor" writer="helloItemWriter"
							 commit-interval="2" >
							 <batch:listeners >
							 	<batch:listener ref="helloStepExecutionListener"/>
							 	<batch:listener ref="helloChunkListener"/>
							 </batch:listeners>
				</batch:chunk>
			</batch:tasklet>
		</batch:step>		
	</batch:job>
	
	
	<!-- tasklet -->
	<batch:job id="helloWorldTasklet" >
		<batch:step id="tasklet1">
			<batch:tasklet ref="helloTasklet"/>
		</batch:step>		
	</batch:job>
	
	<bean id="helloItemReader" class="org.iptime.iothome.batch.HelloItemReader"/>
	<bean id="helloItemProcessor" class="org.iptime.iothome.batch.HelloItemProcessor"/>
	<bean id="helloItemWriter" class="org.iptime.iothome.batch.HelloItemWriter"/>
	
	<bean id="helloTasklet" class="org.iptime.iothome.batch.HelloTaskLet"/>
	
	<bean id="helloStepExecutionListener" class="org.iptime.iothome.batch.listener.HelloStepExecutionListener"/>
	<bean id="helloChunkListener" class="org.iptime.iothome.batch.listener.HelloChunkListener"/>
	
	<bean id="springBatchScheduler" class="org.iptime.iothome.batch.SpringBatchScheduler"/>
	
	<context:annotation-config/>

</beans>

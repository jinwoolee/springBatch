<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:batch="http://www.springframework.org/schema/batch"
	xsi:schemaLocation="http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

	<batch:job id="helloWorldJob">
		<batch:step id="step1">
			<batch:tasklet>
				<batch:chunk reader="helloItemReader" processor="helloItemProcessor" writer="helloItemWriter"
							 commit-interval="2"/>
			</batch:tasklet>
		</batch:step>
	</batch:job>
	
	<bean id="helloItemReader" class="org.iptime.iothome.batch.HelloItemReader"/>
	<bean id="helloItemProcessor" class="org.iptime.iothome.batch.HelloItemProcessor"/>
	<bean id="helloItemWriter" class="org.iptime.iothome.batch.HelloItemWriter"/>

</beans>
